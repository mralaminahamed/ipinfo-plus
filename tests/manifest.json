{
  "manifest_version": 2,
  "name": "IP Info Plus",
  "short_name": "IPInfo Plus",
  "author": "Mr. Al-Amin Ahamed",
  "homepage_url": "https://www.mishusoft.com/browser/extension/ipinfoplus/",
  "version": "1.4.2",
  "default_locale": "en",
  "description": "__MSG_extension_description__",
  "icons": {
    "16": "assets/images/image-16x16.png",
    "32": "assets/images/image-32x32.png",
    "48": "assets/images/image-48x48.png",
    "64": "assets/images/image-64x64.png",
    "96": "assets/images/image-96x96.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": ["assets/js/background.js"]
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": {
        "16": "assets/images/image-16x16.png",
        "32": "assets/images/image-32x32.png",
        "48": "assets/images/image-48x48.png",
        "64": "assets/images/image-64x64.png",
        "96": "assets/images/image-96x96.png"
    },
    "default_title": "__MSG_command_toggle_enabled__",
    "default_popup": "ip-info-plus.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/js/content.js"],
      "all_frames": true
    }
  ]
}